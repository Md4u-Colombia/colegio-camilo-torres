<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th><%=Company.human_attribute_name('name')%></th>
      <th><%=Company.human_attribute_name('address')%></th>
      <th><%=Company.human_attribute_name('contact')%></th>
      <th><%=Company.human_attribute_name('phone')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.contact.to_i != 0? User.find(company.contact).name : "" %></td>
        <td><%= company.phone %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } unless assigned_id(User,'company_id',company.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

