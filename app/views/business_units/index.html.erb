<h1>Listing business_units</h1>

<table>
  <thead>
    <tr>
      <th><%=BusinessUnit.human_attribute_name('name')%></th>
      <th><%=BusinessUnit.human_attribute_name('status')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_units.each do |business_unit| %>
      <tr>
        <td><%= business_unit.name %></td>
        <td><%= business_unit.status == true ? t('str_status_active') : t('str_status_inactive') %></td>
        <td><%= link_to 'Show', business_unit %></td>
        <td><%= link_to 'Edit', edit_business_unit_path(business_unit) %></td>
        <td><%= link_to 'Destroy', business_unit, method: :delete, data: { confirm: 'Are you sure?' } unless assigned_id(User,'business_unite_id',business_unit.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

