<h1><%= t('.title') %></h1>
<table>
  <thead>
    <tr>
      <th><%=Position.human_attribute_name('name')%></th>
      <th><%=Position.human_attribute_name('position_level_id')%></th>
      <th><%=Position.human_attribute_name('description')%></th>
      <th><%=Position.human_attribute_name('status')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td><%= position.position_level_id != 0? position.position_level.name : "" %></td>
        <td><%= position.description %></td>
        <td><%= position.status == true ? t('str_status_active') : t('str_status_inactive') %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } unless assigned_id(User,'position_id',position.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

