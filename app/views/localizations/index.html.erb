<h1>Listing localizations</h1>
<table>
  <thead>
    <tr>
      <th><%=Localization.human_attribute_name('name')%></th>
      <th><%=Localization.human_attribute_name('parent_id')%></th>
      <th><%=Localization.human_attribute_name('status')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @localizations.each do |localization| %>
      <tr>
        <td><%= localization.name %></td>
        <td><%= localization.parent_id.to_i != 0? Localization.find(localization.parent_id).name : "" %></td>
        <td><%= localization.status == true ? t('str_status_active') : t('str_status_inactive') %></td>
        <td><%= link_to 'Show', localization %></td>
        <td><%= link_to 'Edit', edit_localization_path(localization) %></td>
        <td><%= link_to 'Destroy', localization, method: :delete, data: { confirm: 'Are you sure?' } unless assigned_id(User,'localization_id',localization.id) or assigned_id(Localization,'parent_id',localization.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

