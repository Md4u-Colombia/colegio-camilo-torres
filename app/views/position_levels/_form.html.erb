<%= form_for(@position_level) do |f| %>
  <% if @position_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@position_level.errors.count, "error") %> <%= t('error_form')%> </h2>

      <ul>
      <% @position_level.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit t('position_levels.save') %>
  </div>
<% end %>
