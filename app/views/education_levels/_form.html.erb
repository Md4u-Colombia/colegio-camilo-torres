<%= form_for(@education_level) do |f| %>
  <% if @education_level.errors.any? %>

    <div class="error_explanation">
      <h2><%= t('errors.template.header', :count=>@education_level.errors.size,
:model=>t('activerecord.models.education_level')) %>:</h2>
      <%= t('errors.template.body') %>
      <ul>
      <% @education_level.errors.full_messages.each do |message| %>
        <li><i class="fa fa-hand-o-right"></i>&nbsp;<%= message %></li>
      <% end %>
      </ul>
    </div>

  <% end %>

  <div class="form__style">
    <div class="form__item">
      <div class="wrapper">
        <div class="fa fa-pencil text_field__icon"></div>
        <%= f.text_field :name, class: "field__placeholder_icon", placeholder: "#{t('.name')}" %>
      </div>
    </div>
    <div class="form__item">
      <div class="wrapper">
        <div class="fa fa-pencil text_field__icon"></div>
        <%= f.text_area :description, class: "field__placeholder_icon", placeholder: "#{t('.description')}", style:"height:150px;" %>
      </div>
    </div>
  </div>

  <div class="form__button">

    <div class="button__border_radius left">
      <%= link_to '<i class="fa fa-refresh fa-lg"></i>&nbsp;Cancelar'.html_safe, new_education_level_path, class: "button-link color-button-green", style: "position: absolute;" %>
    </div>

    <div class="button__border_radius right">
      <%= button_tag(type: 'submit', class: "form__submit_button") do %>
        <i class="fa fa-floppy-o fa-lg"></i> <%=t('.save')%>
      <% end %>
    </div>
  </div>
<% end %>
