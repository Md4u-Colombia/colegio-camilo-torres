<h1><%= t('.title') %></h1>
<table>
  <thead>
    <tr>
      <th><%=City.human_attribute_name('name')%></th>
      <th><%=City.human_attribute_name('country_id')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.country_id != 0? city.country.name : "" %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } unless assigned_id(User,'city_id',city.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

